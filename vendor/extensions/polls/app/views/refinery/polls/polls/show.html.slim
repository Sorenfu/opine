-content_for :body_content_title do
  = @poll.slug

.section-jumbotron
  .container
    .section-jumbotron-hgroup
      h2= @poll.heading
      p= @poll.sub_heading

    .flex-card-deck-wrapper
      .flex-card-deck
        .flex-card-sm-12.flex-card-lg-12.card.card--borderless
          .card-image(style="background-image: url(#{@poll.background_image.url}); height: 380px;")

.section-tabs
  .container
    ul.nav.nav-tabs role="tablist"
      li.active role="presentation"
        a href="#first" role="tab" data-toggle="tab" Din mening?
      li role="presentation"
        a href="#second" role="tab" data-toggle="tab" Resultater
.section-tab-content
  .container
    .tab-content
      #first.tab-pane.active role="tabpanel"
        .flex-card-deck
          .flex-card-sm-12.flex-card-lg-8
            / start .card /
            #poll-content.card
              - if @user_vote #TODO: Check this logic!
                = render 'polls/thank_you'
              - else
                =form_tag main_app.poll_vote_path(@poll)
                .card-header
                  h4.card-title
                    span.fa.fa-fw.fa-bullhorn<>
                    | Sæt din stemme
                  h4= @poll.question
                  = render '/refinery/content_page'
                .card-body
                  - @vote_options.each_with_index do |vote_option, i|
                    .form-group
                      .checkbox
                        input id="vote_option_id_#{i}" type="radio" name="vote_option_id" value=vote_option.id
                        label for="vote_option_id_#{i}" = vote_option.text

                .card-footer
                  .row
                    .col-sm-3
                      = submit_tag "Stem", class: 'btn btn-primary btn-lg btn-block'
                    .col-sm-9.text-center-xs
                      p.card-text.text-muted<>
                        |Du stemmer anonymt.
                        br
                        |Din stemme indgår kun i statistik
            / end .card /
            .m-t-5
              h2 Hvad syntes du?
              .fb-comments data-href=request.url data-numposts="5" data-width="100%"
          .flex-card-lg-4.invisible-breakpoint
            .card
              .card-image(style="background-image: url(#{image_path(@poll.image.url)});")
              .card-header
                h4.card-title=@poll.description_heading
                .card-meta
                  p=@poll.description
      #second.tab-pane role="tabpanel"
        .card
          .card-header
            h4.card-title
          .card-body
            canvas#chartjs data-labels=@graph_data.map(&:first) data-counts=@graph_data.map(&:last) data-graph-data= height="500"
            - if true
              javascript:
                var ctx = document.getElementById("chartjs");
                var myChart = new Chart(ctx, {
                  type: 'bar',
                  data: {
                    labels: $('#chartjs').data().labels,
                    datasets: [
                      {
                        label: 'Antal stemmer',
                        data: $('#chartjs').data().counts,
                        backgroundColor: [
                          'rgba(90, 220, 150, 1)',
                          'rgba(104, 31, 178, 1)',
                          'rgba(0, 24, 255, 1)',
                          'rgba(255, 252, 33, 1)',
                          'rgba(250, 220, 210, 1)',
                          'rgba(0, 0, 0, 1)',
                          'rgba(213, 83, 123, 1)',
                          'rgba(41, 59, 110, 1)'
                        ]
                      }
                    ]
                  },
                  options: {
                    legend: {
                      display: false,
                      labels: {
                      }
                    },
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                      yAxes: [{
                        ticks: {
                          beginAtZero: true
                        }
                      }],
                      xAxes: [{
                        ticks: {
                          display: false,
                          autoSkip: false,
                          fontStyle: 'bold',
                          maxRotation: 0,
                          minRotation: 0,
                          padding: 20
                        },
                        stacked: true
                      }]
                    }
                  }
                });
                myChart.generateLegend();

    h2.m-t-5 Se andre afstemninger
    .card-deck-wrapper
      .card-deck.m-t-2
        = render partial: 'refinery/polls/poll', collection: @related_polls