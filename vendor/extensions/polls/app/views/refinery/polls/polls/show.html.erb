<% content_for :body_content_title do %>
  <%= @poll.slug %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Heading</h1>
    <p>
      <%=raw @poll.heading %>
    </p>
  </section>
  <section>
    <h1>Sub Heading</h1>
    <p>
      <%=raw @poll.sub_heading %>
    </p>
  </section>
  <section>
    <h1>Teaser</h1>
    <p>
      <%=raw @poll.teaser %>
    </p>
  </section>
  <section>
    <h1>Description Heading</h1>
    <p>
      <%=raw @poll.description_heading %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @poll.description %>
    </p>
  </section>
  <section>
    <h1>Expires At</h1>
    <p>
      <%=raw @poll.expires_at %>
    </p>
  </section>
  <section>
    <h1>Slug</h1>
    <p>
      <%=raw @poll.slug %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @poll.image, nil %>
    </p>
  </section>
  <section>
    <h1>Background Image</h1>
    <p>
      <%= image_fu @poll.background_image, nil %>
    </p>
  </section>
  <section>
    <h1>Wallpaper</h1>
    <p>
      <%= image_fu @poll.wallpaper, nil %>
    </p>
  </section>
  <section>
    <h1>Category</h1>
    <p>
      <%=raw @poll.category_id %>
    </p>
  </section>
  <section>
    <h1>Question</h1>
    <p>
      <%=raw @poll.question %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="polls">
      <% @polls.each do |poll| %>
        <li>
          <%= link_to poll.slug, refinery.polls_poll_path(poll) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
