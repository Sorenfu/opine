<%= form_for [refinery, :polls_admin, @poll] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @poll,
              :include_object_name => true %>

  <%= render '/refinery/admin/locale_picker',
              :current_locale => Globalize.locale %>
  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:heading, :sub_heading, :teaser, :description_heading, :description, :question],
                :object => "polls/poll" -%>
  </div>

  <div class='field'>
    <%= f.label :expires_at -%>
    <%= f.datetime_select :expires_at -%>
  </div>

  <div class='field'>
    <%= f.label :slug -%>
    <%= f.text_field :slug -%>
  </div>

  <div class='field'>
    <%= f.label :image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :image_id,
               :image => @poll.image,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :background_image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :background_image_id,
               :image => @poll.background_image,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :wallpaper -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :wallpaper_id,
               :image => @poll.wallpaper,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :order -%>
    <%= f.number_field :order -%>
  </div>

  <div class='field'>
    <%= f.label :category -%>
    <%= f.select :category_id,  Category.all.collect { |p| [ p.name, p.id ] } -%>
  </div>

  <div class='field'>
    <%= f.label :vote_options %>
    <%= f.fields_for :vote_options do |j| %>
        <%= render 'refinery/polls/admin/polls/vote_option_fields', :f => j %>
    <% end %>
    <%= link_to_add_fields 'Add nested model', f, :vote_options %>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.polls.admin.polls.poll'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @poll.slug) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
