<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(poll) -%>">
  <span class='title'>
    <%= translated_field(poll, :slug) %>
  </span>

  <% if Refinery::I18n.frontend_locales.many? %>
    <span class='locales'>
      <% poll.translations.sort_by{ |t| Refinery::I18n.frontend_locales.index(t.locale)}.each do |translation| %>
        <% if translation.slug.present? %>
          <%= link_to refinery.edit_polls_admin_poll_path(poll, :switch_locale => translation.locale),
                      class: 'locale', title: translation.locale.upcase do %>

            <div class="<%=translation.locale %> locale_marker">
              <%= locale_text_icon(translation.locale.upcase) %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </span>
  <% end %>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.polls_poll_path(poll), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_polls_admin_poll_path(poll), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.polls_admin_poll_path(poll), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: poll.slug)}}  ) %>
  </span>
</li>
