<ul>
  <% if ::Refinery::Polls::Admin::PollsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.polls_admin_polls_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_polls_admin_poll_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Polls::Admin::PollsController.sortable? && ::Refinery::Polls::Poll.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.polls_admin_polls_path,
                     t('.reorder', what:  "Polls"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.polls_admin_polls_path,
                      t('.reorder_done', what: "Polls"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
