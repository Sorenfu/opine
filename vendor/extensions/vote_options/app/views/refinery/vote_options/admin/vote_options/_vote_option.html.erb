<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(vote_option) -%>">
  <span class='title'>
    <%= vote_option.title %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.vote_options_vote_option_path(vote_option), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_vote_options_admin_vote_option_path(vote_option), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.vote_options_admin_vote_option_path(vote_option), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: vote_option.title)}}  ) %>
  </span>
</li>
