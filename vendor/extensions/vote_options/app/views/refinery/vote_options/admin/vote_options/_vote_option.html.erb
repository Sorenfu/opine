<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(vote_option) -%>">
  <span class='title'>
    <%= translated_field(vote_option, :text) %>
  </span>

  <% if Refinery::I18n.frontend_locales.many? %>
    <span class='locales'>
      <% vote_option.translations.sort_by{ |t| Refinery::I18n.frontend_locales.index(t.locale)}.each do |translation| %>
        <% if translation.text.present? %>
          <%= link_to refinery.edit_vote_options_admin_vote_option_path(vote_option, :switch_locale => translation.locale),
                      class: 'locale', title: translation.locale.upcase do %>

            <div class="<%=translation.locale %> locale_marker">
              <%= locale_text_icon(translation.locale.upcase) %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </span>
  <% end %>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.vote_options_vote_option_path(vote_option), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_vote_options_admin_vote_option_path(vote_option), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.vote_options_admin_vote_option_path(vote_option), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: vote_option.text)}}  ) %>
  </span>
</li>
